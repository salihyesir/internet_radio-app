
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
@using (Html.BeginForm("SaveOrUpdate", "Home", FormMethod.Post))
{
    <input type="hidden" id="id" name="id" value="@ViewBag.id" />
    <input type="text" id="RadioName" name="RadioName" class="form-control" style="width:100%; margin-bottom:10px;" />
    <input type="text" id="RadioDesc" name="RadioDesc" class="form-control" style="width:100%; margin-bottom:10px;" />
    <input type="text" id="RadioImg" name="RadioImg" class="form-control" style="width:100%; margin-bottom:10px;" />
    <input type="text" id="RadioCat" name="RadioCat" class="form-control" style="width:100%; margin-bottom:10px;" />
    <input type="text" id="RadioUrl" name="RadioUrl" class="form-control" style="width:100%; margin-bottom:10px;" />
    <input type="submit" value="Gönder" class="btn btn-primary" style="width:100%;" />
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script>
    var id = '@ViewBag.id';
    $.getJSON("https://internet-radio-app-f63b9.firebaseio.com/Radios/" + id + "/.json", function (result) {
       
            $('#RadioName').val(result.radyoAd);
            $('#RadioDesc').val(result.radyoDescription);
            $('#RadioImg').val(result.radyoImg);
            $('#RadioCat').val(result.radyoKategori);
            $('#RadioUrl').val(result.radyoUrl);
    });

</script>