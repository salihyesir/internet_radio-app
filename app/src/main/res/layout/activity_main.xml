<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/mainalarmbutton"
        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_alarm" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mainalarmbutton"
        android:orientation="horizontal"
        android:id="@+id/mLayout">

        <Button
            android:id="@+id/mainkanallarbutton"
            style="?android:attr/imageButtonStyle"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/Kanallar" />

        <Button
            android:id="@+id/mainkategorilerbutton"
            style="@android:style/Widget.Holo.ImageButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/Kategoriler" />

        <Button
            android:id="@+id/mainfavorilerbutton"
            style="@android:style/Widget.Holo.ImageButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/Favoriler" />
    </LinearLayout>




    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mLayout"
        android:layout_above="@+id/linearLayout3"></ListView>


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/mainimage"
            android:layout_width="170dp"
            android:layout_height="100dp" />

        <ImageButton
            android:id="@+id/mainplaybutton"
            style="@android:style/Widget.DeviceDefault.Light.ImageButton"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_play"></ImageButton>

        <ImageButton
            android:id="@+id/mainstopbutton"
            style="@android:style/Widget.DeviceDefault.Light.ImageButton"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_pause" />


    </LinearLayout>

</RelativeLayout>
